{% extends 'index.twig' %}

{% block title %}Sign Up | Aigisu{% endblock %}

{% block content %}
    <section>
        <h1>Sign Up</h1>
        {{ dump(user,is_guest,form,errors) }}
        <form action="{{ path_for('web.site.register') }}" method="post">
            <div>
                <label for="register-name">Name:</label>
                <input id="register-name" name="name" type="text" value="{{ form.name }}" required>
                <p>{{ errors.name | join }}</p>
            </div>
            <div>
                <label for="register-email">Email:</label>
                <input id="register-email" name="email" type="email" value="{{ form.email }}" required>
                <p>{{ errors.email | join }}</p>
            </div>
            <div>
                <label for="register-password">Password:</label>
                <input id="register-password" name="password" value="{{ form.password }}" type="password" required>
                <p>{{ errors.password | join }}</p>
            </div>
            <button>Sign Up</button>
        </form>
    </section>
{% endblock %}
