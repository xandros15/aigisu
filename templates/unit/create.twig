{% extends 'index.twig' %}

{% block content %}
    {% if(form.icon) %}
        <img src="{{ form.icon }}">
    {% endif %}
    <form action="{{ form.id ? path_for('web.unit.update', {id:form.id}) : path_for('web.unit.create') }}"
          method="post"
          enctype="multipart/form-data">
        <div>
            <label for="unit-name">Name:</label>
            <input id="unit-name" name="name" type="text" value="{{ form.get('name') }}">
            <p>{{ form.errors.name | join }}</p>
        </div>
        <div>
            <label for="unit-japanese_name">Japanese name:</label>
            <input id="unit-japanese_name" name="japanese_name" type="text" value="{{ form.get('japanese_name') }}">
            <p>{{ form.errors.japanese_name | join }}</p>
        </div>
        <div>
            <label for="unit-link_seesaw">Link seesaw:</label>
            <input id="unit-link_seesaw" name="link_seesaw" type="url" value="{{ form.get('link_seesaw') }}">
            <p>{{ form.errors.link_seesaw | join }}</p>
        </div>
        <div>
            <label for="unit-link_gc">Link gc:</label>
            <input id="unit-link_gc" name="link_gc" type="url" value="{{ form.get('link_gc') }}">
            <p>{{ form.errors.link_gc | join }}</p>
        </div>
        <div>
            <label for="unit-rarity">Rarity:</label>
            <select id="unit-rarity" name="rarity">
                {% for rarity in rarities %}
                    <option value="{{ rarity }}" {{ form.select('rarity', rarity) }}>{{ rarity }}</option>
                {% endfor %}
            </select>
            <p>{{ form.errors.rarity | join }}</p>
        </div>
        <div>
            <label for="unit-gender">Gender:</label>
            <select id="unit-gender" name="gender">
                {% for gender in genders %}
                    <option value="{{ gender }}" {{ form.select('gender', gender) }}>{{ gender }}</option>
                {% endfor %}
            </select>
            <p>{{ form.errors.gender | join }}</p>
        </div>
        <div>
            <label for="unit-dmm">Dmm:</label>
            <input id="unit-dmm" name="dmm" value="1" type="checkbox" {{ form.checkout('dmm') }}>
            <p>{{ form.errors.dmm | join }}</p>
        </div>
        <div>
            <label for="unit-nutaku">Nutaku:</label>
            <input id="unit-nutaku" name="nutaku" value="1" type="checkbox" {{ form.checkout('nutaku') }}>
            <p>{{ form.errors.nutaku | join }}</p>
        </div>
        <div>
            <label for="unit-special_cg">Has special cg::</label>
            <input id="unit-special_cg" name="special_cg" value="1" type="checkbox" {{ form.checkout('special_cg') }}>
            <p>{{ form.errors.special_cg | join }}</p>
        </div>
        <div>
            <label for="unit-icon">Icon:</label>
            <input id="unit-icon" name="icon" type="file">
            <p>{{ form.errors.icon | join }}</p>
        </div>
        <div>
            <label for="unit-tags">Tags:</label>
            <input id="unit-tags" name="tags" type="text" value="{{ form.get('tags') }}">
            <p>{{ form.errors.tags | join }}</p>
        </div>
        <button>{{ form.id ? 'Update' : 'Create' }}</button>
    </form>
{% endblock %}